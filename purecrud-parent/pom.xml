    <distributionManagement>
        <snapshotRepository>
            <uniqueVersion>false</uniqueVersion>
            <id>purebred-private-snapshots</id>
            <name>Purebred Private Snapshots</name>
            <url>http://www.purecrud.com/nexus/content/repositories/purebred-private-snapshots/</url>
        </snapshotRepository>
    </distributionManagement>

    <repositories>
        <repository>
            <id>purebred-releases</id>
