<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
           http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
           http://www.springframework.org/schema/aop
           http://www.springframework.org/schema/aop/spring-aop-3.0.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <bean id="uiMessageSource" class="com.purebred.core.view.MessageSource">
        <property name="basename" value="classpath:uiMessages/messages"/>
        <property name="defaultEncoding" value="UTF-8"/>
    </bean>

    <bean id="entityMessageSource" class="com.purebred.core.view.MessageSource">
        <property name="basename" value="classpath:entityMessages/messages"/>
        <property name="defaultEncoding" value="UTF-8"/>
    </bean>

    <context:component-scan base-package="com.purebred.core"/>

    <context:annotation-config/>
    <aop:aspectj-autoproxy/>

</beans>